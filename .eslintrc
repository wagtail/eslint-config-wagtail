{
  "env": { "node": true },
  "extends": "./index.js",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {},
  "settings": {
    // Manually set the version to disable automated detection of the "react" dependency.
    "react": { "version": "999.999.999" }
  },
  "overrides": [
    {
      "files": ["*.test.{js,mjs}"],
      "rules": {
        "import/extensions": ["error", "always"],
        "import/no-commonjs": "error"
      }
    }
  ]
}
